{
    "name": "geeks-diary",
    "version": "1.0.0",
    "description": "Geek's Diary - TIL writing tool",
    "main": "dist/main.js",
    "scripts": {
        "start": "ELECTRON_DISABLE_SECURITY_WARNINGS=true npx electron --inspect=5858 .",
        "build": "npm run build:renderer && npm run build:main",
        "build:renderer": "cross-env RUN_TARGET=production npx ng build geeks-diary --prod",
        "build:main": "cross-env RUN_TARGET=production npx webpack --config scripts/webpack.electron.js",
        "serve:renderer": "npx ng build geeks-diary --watch",
        "serve:main": "npx webpack --config scripts/webpack.electron.js --watch --color",
        "lint": "npm run lint:renderer && npm run lint:main",
        "lint:renderer": "npx ng lint geeks-diary",
        "lint:main": "npx tslint --project src/tsconfig.electron.json",
        "test": "cross-env RUN_TARGET=test npx ng test geeks-diary",
        "ci": "npm run lint && npm run test && npm run build",
        "scripts:copy-vendors": "scripts/copy-vendors.sh",
        "scripts:override-angular-dev-kit": "scripts/override-angular-dev-kit",
        "scripts:rebuild": "npx electron-rebuild",
        "postinstall": "npm run scripts:rebuild && npm run scripts:copy-vendors && npm run scripts:override-angular-dev-kit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seokju-na/geeks-diary.git"
    },
    "author": {
        "name": "Seokju Na",
        "email": "seokju.me@gmail.com"
    },
    "license": "MIT",
    "build": {
        "appId": "me.seokju.geeks-diary",
        "productName": "Geeks Diary",
        "directories": {
            "buildResources": "src/resources/",
            "output": "build/",
            "app": "dist/"
        },
        "asar": true
    },
    "engines": {
        "node": ">= 8.9",
        "npm": ">= 1.5.0"
    },
    "dependencies": {
        "@angular/animations": "^6.0.7",
        "@angular/cdk": "^6.3.1",
        "@angular/common": "^6.0.7",
        "@angular/compiler": "^6.0.7",
        "@angular/core": "^6.0.7",
        "@angular/forms": "^6.0.7",
        "@angular/platform-browser": "^6.0.7",
        "@angular/platform-browser-dynamic": "^6.0.7",
        "@ngrx/effects": "^6.0.1",
        "@ngrx/store": "^6.0.1",
        "@ngrx/store-devtools": "^6.0.1",
        "codemirror": "^5.39.0",
        "core-js": "^2.5.7",
        "devicon-2.2": "^2.2.0",
        "file-url": "^2.0.2",
        "highlight.js": "^9.12.0",
        "line-awesome": "icons8/line-awesome",
        "lodash.camelcase": "^4.3.0",
        "marked": "^0.4.0",
        "monaco-editor": "^0.13.1",
        "nodegit": "^0.22.1",
        "rxjs": "^6.2.1",
        "typeface-open-sans": "^0.0.54",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.6.8",
        "@angular/cli": "~6.0.8",
        "@angular/compiler": "^6.0.7",
        "@angular/compiler-cli": "^6.0.7",
        "@angular/language-service": "^6.0.7",
        "@types/codemirror": "^0.0.57",
        "@types/jasmine": "~2.8.6",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^10.5.1",
        "@types/nodegit": "^0.22.3",
        "awesome-typescript-loader": "^5.2.0",
        "codelyzer": "^4.4.2",
        "cross-env": "^5.2.0",
        "electron": "^2.0.3",
        "electron-devtools-installer": "^2.2.4",
        "electron-rebuild": "^1.7.3",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~1.7.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.0",
        "karma-electron": "^6.0.0",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "typescript": "~2.7.x",
        "uglifyjs-webpack-plugin": "^1.2.7",
        "webpack": "^4.14.0",
        "webpack-cli": "^3.0.8"
    }
}
